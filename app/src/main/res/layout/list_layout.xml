<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/listItemName"
                android:layout_alignBottom="@+id/listItemName"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignRight="@+id/textView2"
                android:text="Name:" />

            <TextView
                android:id="@+id/TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location:"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/listItemLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_alignBaseline="@+id/TextView4"
                android:layout_alignBottom="@+id/TextView4"
                android:layout_toRightOf="@+id/TextView4"
                android:layout_toEndOf="@+id/TextView4" />

            <TextView
                android:id="@+id/listItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/listItemName"
                android:layout_alignStart="@+id/listItemName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description:"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/TextView4"
                android:layout_alignRight="@+id/TextView4"
                android:layout_alignEnd="@+id/TextView4" />

            <TextView
                android:id="@+id/listItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7.42"
                android:text="TextView"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/listItemLocation"
                android:layout_alignStart="@+id/listItemLocation"
                android:layout_marginTop="88dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

    </GridLayout>

</LinearLayout>